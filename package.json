{
  "name": "tsoa",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Marco Lehmann <m99@posteo.de>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "bundle:api-docs": "redoc-cli bundle dist/swagger.json -o dist/api-docs.html",
    "dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "fmt": "prettier --config .prettierrc '{src,test}/**/*.ts' --write --no-color",
    "gen": "tsoa spec-and-routes",
    "lint": "eslint '{src,test}/**/*.ts'",
    "serve:api-docs": "redoc-cli serve dist/swagger.json",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "@hapi/hapi": "^21.2.2",
    "tsoa": "^4.1.3"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^21.0.0",
    "@types/node": "^18.11.19",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.50.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "got": "^12.5.3",
    "nodemon": "^2.0.20",
    "package-json": "^8.1.0",
    "prettier": "^2.8.4",
    "redoc-cli": "^0.13.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
